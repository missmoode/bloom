{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noImplicitOverride": true
  },
  "include": [
    "src/lib/**/*.ts",
    "src/cmd/**/*.ts"
  ],
}